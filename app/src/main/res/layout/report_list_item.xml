<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp">

                <TextView
                    android:id="@+id/ansHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:drawableTint="@color/orangeDark"
                    android:text="Answer"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/titleTv"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/ansHead"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawableStart="@drawable/ic_answer"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/orangeDark"
                    android:text="How to do this"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/reportByTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/titleTv"
                    android:layout_marginTop="8dp"
                    android:drawableStart="@drawable/baseline_report_24"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/orangeDark"
                    android:text="Report by 55 users"
                    android:textColor="@color/greyColor"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/reportByTv"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="12dp"
                    android:background="#A4A1A1" />

                <TextView
                    android:layout_below="@id/view"
                    android:id="@+id/quesHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:drawableTint="@color/orangeDark"
                    android:text="Question"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/quesTitleTv"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/quesHead"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawableStart="@drawable/baseline_question_mark_24"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/orangeDark"
                    android:text="How to do this"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/quesDescTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/quesTitleTv"
                    android:layout_marginTop="8dp"
                    android:drawableStart="@drawable/baseline_description_24"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/orangeDark"
                    android:text="it is my description"
                    android:textColor="@color/greyColor"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/deleteBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/quesDescTv"
                    android:layout_marginTop="12dp"
                    android:text="Delete Answer" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>